<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_ProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_Product"
            android:layout_width="match_parent"
            android:layout_height="350dp" >
        </android.support.v4.view.ViewPager>

        <TextView
            android:id="@+id/textView_productMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999" />

        <TextView
            android:id="@+id/textView_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999" />

        <Button
            android:id="@+id/button_andtocart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/demo2"
            android:text="AND TO CART" />

        <TextView
            android:id="@+id/textView_related_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Related Product"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.sileria.android.view.HorzListView
            android:id="@+id/horizontal_lv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView><!-- From: file:/home/pnt/Programs/AndroidProjects/Project/app/src/main/res/layout/fragment_product.xml -->