<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/imageView_product_item"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:padding="3dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/textView_nameProduct_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView_product_item"
        android:layout_alignRight="@+id/imageView_product_item"
        android:layout_below="@+id/imageView_product_item"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView_money_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_nameProduct_item"
        android:layout_below="@+id/textView_nameProduct_item" />

    <TextView
        android:id="@+id/textView_outofstock_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_product_item"
        android:layout_alignRight="@+id/imageView_product_item"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:background="#FF0000"
        android:text="Out of stock"
        android:textColor="#FFFFFF" />

</RelativeLayout>